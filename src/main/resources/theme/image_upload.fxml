<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="imageUploadRoot" alignment="TOP_CENTER"
      maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0"
      prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.111"
      fx:controller="com.faforever.client.chat.ImageUploadWindowController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <Label maxWidth="1.7976931348623157E308" styleClass="h1" text="%chat.imageUpload.title"/>
        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0"
               styleClass="hint" text="%chat.imageUpload.description" wrapText="true">
            <graphic>
                <Label styleClass="icon" text="î€‚"/>
            </graphic>
        </Label>
        <ImageView fx:id="imagePreview" fitHeight="240.0" fitWidth="360.0" pickOnBounds="true" preserveRatio="true"/>
        <HBox alignment="CENTER_RIGHT" minHeight="0.0" minWidth="0.0" spacing="10.0">
            <children>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#onUploadButtonClicked"
                        text="%chat.imageUpload.uploadButton"/>
                <Button cancelButton="true" mnemonicParsing="false" onAction="#onCancelButtonClicked" text="%cancel"/>
            </children>
        </HBox>
    </children>
</VBox>
